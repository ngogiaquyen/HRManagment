<Window x:Class="HRMANAGMENT2.Dialogs.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Chi tiết Nhân viên" Height="700" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã NV:"/>
            <TextBox x:Name="TxtEmployeeId" IsReadOnly="True"/>
            <Label Content="Tên:"/>
            <TextBox x:Name="TxtName"/>
            <Label Content="Ngày sinh:"/>
            <DatePicker x:Name="DpDOB"/>
            <Label Content="Giới tính:"/>
            <ComboBox x:Name="CbGender">
                <ComboBox.Items>
                    <sys:String>Nam</sys:String>
                    <sys:String>Nữ</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Quốc tịch:"/>
            <TextBox x:Name="TxtNationality" Text="Việt Nam"/>
            <Label Content="CCCD:"/>
            <TextBox x:Name="TxtCCCD"/>
            <Label Content="Ngày cấp CCCD:"/>
            <DatePicker x:Name="DpCCCDIssueDate"/>
            <Label Content="Nơi cấp CCCD:"/>
            <TextBox x:Name="TxtCCCDIssuePlace"/>
            <Label Content="Địa chỉ thường trú:"/>
            <TextBox x:Name="TxtPermanentAddress" AcceptsReturn="True" Height="60"/>
            <Label Content="Địa chỉ hiện tại:"/>
            <TextBox x:Name="TxtCurrentAddress" AcceptsReturn="True" Height="60"/>
            <Label Content="SĐT:"/>
            <TextBox x:Name="TxtPhone"/>
            <Label Content="Email:"/>
            <TextBox x:Name="TxtEmail"/>
            <Label Content="Tình trạng hôn nhân:"/>
            <ComboBox x:Name="TxtMaritalStatus" IsEditable="True">
                <ComboBox.Items>
                    <sys:String>Độc thân</sys:String>
                    <sys:String>Đã kết hôn</sys:String>
                    <sys:String>Ly hôn</sys:String>
                    <sys:String>Góa</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Số người phụ thuộc:"/>
            <TextBox x:Name="TxtDependents"/>
            <Label Content="BHXH:"/>
            <TextBox x:Name="TxtSocialInsuranceNumber"/>
            <Label Content="Mã số thuế:"/>
            <TextBox x:Name="TxtTaxCode"/>
            <Label Content="Mô tả công việc:"/>
            <TextBox x:Name="TxtJobDescription" AcceptsReturn="True" Height="60"/>
            <Label Content="Chức vụ:"/>
            <ComboBox x:Name="TxtPosition" IsEditable="True">
                <ComboBox.Items>
                    <sys:String>Nhân viên</sys:String>
                    <sys:String>Trưởng nhóm</sys:String>
                    <sys:String>Quản lý</sys:String>
                    <sys:String>Giám đốc</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Phòng ban:"/>
            <ComboBox x:Name="TxtDepartment" IsEditable="True">
                <ComboBox.Items>
                    <sys:String>IT</sys:String>
                    <sys:String>HR</sys:String>
                    <sys:String>Tài chính</sys:String>
                    <sys:String>Marketing</sys:String>
                    <sys:String>Kinh doanh</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Cấp bậc:"/>
            <ComboBox x:Name="TxtRank" IsEditable="True">
                <ComboBox.Items>
                    <sys:String>Cấp 1</sys:String>
                    <sys:String>Cấp 2</sys:String>
                    <sys:String>Cấp 3</sys:String>
                    <sys:String>Cấp 4</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Người quản lý:"/>
            <ComboBox x:Name="TxtManager" IsEditable="True">
                <ComboBox.Items>
                    <sys:String>Nguyễn Văn A</sys:String>
                    <sys:String>Trần Thị B</sys:String>
                    <sys:String>Lê Văn C</sys:String>
                    <sys:String>Phạm Thị D</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Lịch làm việc:"/>
            <TextBox x:Name="TxtWorkSchedule" AcceptsReturn="True" Height="60"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>