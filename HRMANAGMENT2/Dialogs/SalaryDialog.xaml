<Window x:Class="HRMANAGMENT2.Dialogs.SalaryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Lương" Height="600" Width="800" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã Lương:"/>
            <TextBox x:Name="TxtSalaryId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Lương tháng:"/>
            <TextBox x:Name="TxtMonthlySalary"/>
            <Label Content="Phiếu lương:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtPaySlipPath" Width="400"/>
                <Button x:Name="BtnSelectPaySlip" Content="Chọn" Click="BtnSelectPaySlip_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenPaySlip" Content="Mở" Click="BtnOpenPaySlip_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Tăng lương:"/>
            <TextBox x:Name="TxtSalaryIncreaseDecisionPath"/>
            <Label Content="Số tài khoản NH:"/>
            <TextBox x:Name="TxtBankAccount"/>
            <Label Content="Thông tin BH:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtInsuranceInfo" Width="400"/>
                <Button x:Name="BtnSelectInsuranceInfo" Content="Chọn" Click="BtnSelectInsuranceInfo_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenInsuranceInfo" Content="Mở" Click="BtnOpenInsuranceInfo_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Phụ cấp:"/>
            <TextBox x:Name="TxtAllowances"/>
            <Label Content="Thưởng:"/>
            <TextBox x:Name="TxtBonuses"/>
            <Label Content="Chính sách nghỉ phép:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtLeavePolicy" Width="400"/>
                <Button x:Name="BtnSelectLeavePolicy" Content="Chọn" Click="BtnSelectLeavePolicy_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenLeavePolicy" Content="Mở" Click="BtnOpenLeavePolicy_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>