<Window x:Class="HRMANAGMENT2.Dialogs.ContractDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Chi tiết Hợp đồng" Height="700" Width="800" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã HĐ:"/>
            <TextBox x:Name="TxtContractId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Ngày bắt đầu:"/>
            <DatePicker x:Name="DpStartDate"/>
            <Label Content="Ngày kết thúc:"/>
            <DatePicker x:Name="DpEndDate"/>
            <Label Content="Loại HĐ:"/>
            <ComboBox x:Name="TxtContractType" IsEditable="True">
                <ComboBox.Items>
                    <sys:String>Hợp đồng lao động</sys:String>
                    <sys:String>Hợp đồng thử việc</sys:String>
                    <sys:String>Hợp đồng dịch vụ</sys:String>
                    <sys:String>Hợp đồng khác</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Label Content="Phụ lục HĐ:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtContractAnnexPath" Width="400"/>
                <Button x:Name="BtnSelectContractAnnex" Content="Chọn" Click="BtnSelectContractAnnex_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenContractAnnex" Content="Mở" Click="BtnOpenContractAnnex_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Thỏa thuận bảo mật:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtConfidentialityAgreementPath" Width="400"/>
                <Button x:Name="BtnSelectConfidentiality" Content="Chọn" Click="BtnSelectConfidentiality_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenConfidentiality" Content="Mở" Click="BtnOpenConfidentiality_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Thỏa thuận không cạnh tranh:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtNonCompeteAgreementPath" Width="400"/>
                <Button x:Name="BtnSelectNonCompete" Content="Chọn" Click="BtnSelectNonCompete_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenNonCompete" Content="Mở" Click="BtnOpenNonCompete_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Quyết định bổ nhiệm:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtAppointmentDecisionPath" Width="400"/>
                <Button x:Name="BtnSelectAppointment" Content="Chọn" Click="BtnSelectAppointment_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenAppointment" Content="Mở" Click="BtnOpenAppointment_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Quyết định tăng lương:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtSalaryIncreaseDecisionPath" Width="400"/>
                <Button x:Name="BtnSelectSalaryIncrease" Content="Chọn" Click="BtnSelectSalaryIncrease_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenSalaryIncrease" Content="Mở" Click="BtnOpenSalaryIncrease_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Quyết định thưởng:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtRewardDecisionPath" Width="400"/>
                <Button x:Name="BtnSelectReward" Content="Chọn" Click="BtnSelectReward_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenReward" Content="Mở" Click="BtnOpenReward_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>