<Window x:Class="HRMANAGMENT2.Dialogs.TrainingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Đào tạo" Height="600" Width="800" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã ĐT:"/>
            <TextBox x:Name="TxtTrainingId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Kế hoạch ĐT:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtTrainingPlanPath" Width="400"/>
                <Button x:Name="BtnSelectTrainingPlan" Content="Chọn" Click="BtnSelectTrainingPlan_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenTrainingPlan" Content="Mở" Click="BtnOpenTrainingPlan_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Chứng chỉ:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtCertificatePath" Width="400"/>
                <Button x:Name="BtnSelectCertificate" Content="Chọn" Click="BtnSelectCertificate_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenCertificate" Content="Mở" Click="BtnOpenCertificate_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Đánh giá:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtEvaluationPath" Width="400"/>
                <Button x:Name="BtnSelectEvaluation" Content="Chọn" Click="BtnSelectEvaluation_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenEvaluation" Content="Mở" Click="BtnOpenEvaluation_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Lộ trình nghề:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtCareerPath" Width="400"/>
                <Button x:Name="BtnSelectCareerPath" Content="Chọn" Click="BtnSelectCareerPath_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenCareerPath" Content="Mở" Click="BtnOpenCareerPath_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>