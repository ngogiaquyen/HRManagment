<Window x:Class="HRMANAGMENT2.Dialogs.RecruitmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Tuyển dụng" Height="800" Width="800" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã TD:"/>
            <TextBox x:Name="TxtRecruitmentId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Đơn ứng tuyển:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtJobApplicationPath" Width="400"/>
                <Button x:Name="BtnSelectJobApplication" Content="Chọn" Click="BtnSelectJobApplication_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenJobApplication" Content="Mở" Click="BtnOpenJobApplication_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Hồ sơ:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtResumePath" Width="400"/>
                <Button x:Name="BtnSelectResume" Content="Chọn" Click="BtnSelectResume_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenResume" Content="Mở" Click="BtnOpenResume_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Bằng cấp:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtDegreesPath" Width="400"/>
                <Button x:Name="BtnSelectDegrees" Content="Chọn" Click="BtnSelectDegrees_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenDegrees" Content="Mở" Click="BtnOpenDegrees_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Khám sức khỏe:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtHealthCheckPath" Width="400"/>
                <Button x:Name="BtnSelectHealthCheck" Content="Chọn" Click="BtnSelectHealthCheck_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenHealthCheck" Content="Mở" Click="BtnOpenHealthCheck_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="CV:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtCVPath" Width="400"/>
                <Button x:Name="BtnSelectCV" Content="Chọn" Click="BtnSelectCV_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenCV" Content="Mở" Click="BtnOpenCV_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Thư giới thiệu:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtReferenceLetterPath" Width="400"/>
                <Button x:Name="BtnSelectReferenceLetter" Content="Chọn" Click="BtnSelectReferenceLetter_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenReferenceLetter" Content="Mở" Click="BtnOpenReferenceLetter_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Biên bản phỏng vấn:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtInterviewMinutesPath" Width="400"/>
                <Button x:Name="BtnSelectInterviewMinutes" Content="Chọn" Click="BtnSelectInterviewMinutes_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenInterviewMinutes" Content="Mở" Click="BtnOpenInterviewMinutes_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Thư mời làm việc:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtOfferLetterPath" Width="400"/>
                <Button x:Name="BtnSelectOfferLetter" Content="Chọn" Click="BtnSelectOfferLetter_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenOfferLetter" Content="Mở" Click="BtnOpenOfferLetter_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>