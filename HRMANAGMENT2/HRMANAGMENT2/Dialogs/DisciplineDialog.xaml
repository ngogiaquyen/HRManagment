<Window x:Class="HRMANAGMENT2.Dialogs.DisciplineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Kỷ luật" Height="700" Width="800" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã KL:"/>
            <TextBox x:Name="TxtDisciplineId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Hồ sơ vi phạm:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtViolationPath" Width="400"/>
                <Button x:Name="BtnSelectViolation" Content="Chọn" Click="BtnSelectViolation_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenViolation" Content="Mở" Click="BtnOpenViolation_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Quyết định KL:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtDisciplinaryDecisionPath" Width="400"/>
                <Button x:Name="BtnSelectDisciplinaryDecision" Content="Chọn" Click="BtnSelectDisciplinaryDecision_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenDisciplinaryDecision" Content="Mở" Click="BtnOpenDisciplinaryDecision_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Thư từ chức:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtResignationLetterPath" Width="400"/>
                <Button x:Name="BtnSelectResignationLetter" Content="Chọn" Click="BtnSelectResignationLetter_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenResignationLetter" Content="Mở" Click="BtnOpenResignationLetter_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Quyết định chấm dứt:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtTerminationDecisionPath" Width="400"/>
                <Button x:Name="BtnSelectTerminationDecision" Content="Chọn" Click="BtnSelectTerminationDecision_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenTerminationDecision" Content="Mở" Click="BtnOpenTerminationDecision_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Hồ sơ bàn giao:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtHandoverPath" Width="400"/>
                <Button x:Name="BtnSelectHandover" Content="Chọn" Click="BtnSelectHandover_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenHandover" Content="Mở" Click="BtnOpenHandover_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <Label Content="Hồ sơ thanh lý:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtLiquidationPath" Width="400"/>
                <Button x:Name="BtnSelectLiquidation" Content="Chọn" Click="BtnSelectLiquidation_Click" Margin="5,0" Padding="8,4" Background="#007BFF" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnOpenLiquidation" Content="Mở" Click="BtnOpenLiquidation_Click" Margin="5,0" Padding="8,4" Background="#28A745" Foreground="White" BorderThickness="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>