<Window x:Class="HRMANAGMENT2.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="450" Width="600" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#F8F9FA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Bên trái: Ảnh -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="20">
            <Image Source="/Images/login.jpg" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Bên phải: Form đăng nhập -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="20" Padding="30">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Grid.Row="0" Text="Quản lý Nhân sự" FontSize="24" FontWeight="Bold" Foreground="#007BFF" 
                           HorizontalAlignment="Center" Margin="0,0,0,30" TextAlignment="Center"/>

                <!-- Username -->
                <Label Grid.Row="1" Content="Tên đăng nhập:" FontSize="14" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                <Border Grid.Row="2" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15" Padding="8,8">
                    <TextBox x:Name="TxtUsername" FontSize="14" BorderThickness="0" Padding="0" HorizontalAlignment="Stretch"/>
                </Border>

                <!-- Password -->
                <Label Grid.Row="3" Content="Mật khẩu:" FontSize="14" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                <Border Grid.Row="4" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15" Padding="8,8">
                    <PasswordBox x:Name="PwbPassword" FontSize="14" BorderThickness="0" Padding="0" HorizontalAlignment="Stretch"/>
                </Border>

                <!-- Button -->
                <Button Grid.Row="5" x:Name="BtnLogin" Content="Đăng nhập" Click="BtnLogin_Click" 
                        Height="35" Background="#007BFF" Foreground="White" FontSize="14" FontWeight="SemiBold"
                        BorderThickness="0" Padding="15,0" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0056b3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>